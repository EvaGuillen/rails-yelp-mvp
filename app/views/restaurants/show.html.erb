<h1><%= @restaurant.name %></h1>

<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>

<h2>Reviews</h2>
<ul>
<% @restaurant.reviews.each do |review| %>
  <li>
    <%= review.content %>
    <%= review.rating %>
  </li>
</ul>
<% end %>

<%= link_to 'Add a review', new_restaurant_review_path(@restaurant), class: "btn btn-outline-dark" %>

<%= link_to 'Back to the list', restaurants_path, class: "btn btn-outline-dark" %>
